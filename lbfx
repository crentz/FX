#!/bin/bash

lb config noauto \
	--mode debian \
        --initsystem sysvinit \
        --system live \
        --interactive shell \
	--chroot-filesystem squashfs \
	--distribution "bullseye" \
	--debian-installer-distribution "bullseye" \
	--debian-installer live \
	--architectures "i386" \
	--linux-flavours "686" \
	--apt-recommends false \
	--apt-secure true \
	--apt-indices false \
	--apt-source-archives true \
	--archive-areas "main contrib non-free" \
	--iso-application "Fluxuan Linux" \
	--iso-publisher "P. Crentz" \
	--iso-volume "Fluxuan Linux" \
	--backports false \
	--security true \
        --updates true \
	--memtest none \
	--bootappend-live "boot=live" \
	--binary-images iso-hybrid \
	"${@}"
